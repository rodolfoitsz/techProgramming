Step five Shared Library

gcc -shared -I/usr/lib/jvm/java-8-openjdk-i386/include/ -I/usr/lib/jvm/java-8-openjdk-i386/include/linux -I/usr/local/jdk/include/solaris CallC.c -fPIC -o libCallC.so

